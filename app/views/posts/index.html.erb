<p id="notice"><%= notice %></p>
<link rel="stylesheet" href="posts.scss">

<h1>Posts</h1>

<table class="table table-hover">

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><div class = "glyphicon glyphicon-star-empty favorite"></div></td>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <!--<td><%= post.category_id %></td>-->
        <td><%= post.user.email %></td>
        <td><%= link_to 'Show', post, :class => 'btn btn-info active' %></td>
        <td><%= link_to 'Edit', edit_post_path(post), :class => 'btn btn-success active' %></td>
        <td><%= link_to 'Delete', post, :class => 'btn btn-warning active', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path, :class => 'btn btn-primary active' %>

<script>
$(".favorite").click(handleFavoriteClicked);
  function handleFavoriteClicked(){
    $(this).removeClass("glyphicon-star-empty");
    $(this).addClass("glyphicon-star");
}
</script>